<script type="text/javascript">
    function elFinderBrowser (field_name, url, type, win) {
        tinymce.activeEditor.windowManager.open({
            file:"{{ url('elfinder', {'instance': instance}) }}",
            title: "{{ title }}",
            width: {{ width }},
            height: {{ height }},
            resizable: 'yes'
        }, {
            setUrl: function (url) {
                win.document.getElementById(field_name).value = url;
            }
        });
        return false;
    }
</script>